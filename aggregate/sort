db.user.aggregate([
    {
        $project: {
            'name': 1,
            'age': 1,
            '_id': 0
        }
    },
    {
        $sort:{
            'age': 1
        } 

    }
]);

db.user.aggregate([
    {
        $project: {
            'name': 1 , 
            'age': 1,
            '_id': 0
        }
    },
    {
        $sort: {
            'age': -1
        }
    }
])